# Playground環境変数テンプレート

# PostgreSQL接続（playground専用DB推奨）
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/playground_db?schema=public"

# ログレベル（debug/info/warn/error）
PLAYGROUND_LOG_LEVEL=debug

# ログファイル
PLAYGROUND_LOG_FILE=./logs/playground.log

# 診断モード（詳細ログ出力）
PLAYGROUND_DIAGNOSTIC_MODE=true
